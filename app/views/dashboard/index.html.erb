<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 sidebar">
      <div class="text-center">
        <%= image_tag("https://kitt.lewagon.com/placeholder/users/jule-tech", alt: "Profile Picture", class: "profile-img") %>
        <% if @current_user.email.present? %>
          <h4><br><%= @current_user.email %></h4>
        <% else %>
          <!-- You can provide a fallback if the first name is nil -->
          <h4>No First Name</h4>
        <% end %>
        <p>Email: <%= current_user.email %></p>
      </div>
      <hr>
      <ul class="list-unstyled">
        <li><%= link_to "Dashboard", dashboard_path %></li>
        <li><%= link_to "Settings", edit_user_registration_path %></li>
        <li><%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete} %></li>
      </ul>
    </div>
    <div class="col-md-9 main-dash"> <!-- Adjusted column width -->
      <h2>Main Content Area</h2>
      <p>This is the main content area where you can display different sections of your dashboard.</p>
    </div>
  </div>
</div>
